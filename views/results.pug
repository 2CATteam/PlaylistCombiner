html
	head
		title= session_name + " - Spotify Guessing Game"
		meta(charset="utf-8")
		meta(name="description", content="A game where you guess who listens to what Spotify songs")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
	body 
		.dflex.justify-content-center
			h3 Your score: 
			h3= score + " / " + max
			each song in songs 
				!= song.html 
				p= "Your guess: " + song.guess 
				p= "Answer: " + song.answer 
			button.btn.btn-primary Save combined playlist to Spotify!